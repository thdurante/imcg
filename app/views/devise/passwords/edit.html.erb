<%= render 'devise/shared/title' %>
<p class="m-b-lg"><%= t('.explanation') %></p>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, defaults: { wrapper_html: { class: 'has-float-label' } }) do |f| %>
  <%= f.input :reset_password_token, as: :hidden %>

  <% if f.object.errors[:reset_password_token].any? %>
    <div style='display: none' data-flash-message='alert'><%= f.full_error :reset_password_token %></div>
  <% end %>

  <%= f.input :password, label: t('.new_password'), required: true, autofocus: true %>
  <%= f.input :password_confirmation, label: t('.new_password_confirmation'), required: true %>

  <%= f.submit t('.button'), class: 'btn btn-primary block full-width m-b' %>
<% end %>

<%= render 'devise/shared/links' %>
