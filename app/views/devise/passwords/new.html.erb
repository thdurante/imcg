<%= render 'devise/shared/title' %>
<p class="m-b-lg"><%= t('.explanation') %></p>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, defaults: { wrapper_html: { class: 'has-float-label' } }) do |f| %>
  <%= f.input :email, required: true, autofocus: true %>
  <%= f.submit t('.button'), class: 'btn btn-primary block full-width m-b' %>
<% end %>

