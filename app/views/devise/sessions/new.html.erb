<%= render 'devise/shared/title' %>
<p class="m-b-lg"><%= t('.message') %></p>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { wrapper_html: { class: 'has-float-label' } }) do |f| %>
  <%= f.input :email, required: false, autofocus: true %>
  <%= f.input :password, required: false %>
  <%= f.input :remember_me, as: :boolean, input_html: { data: {component: 'iCheck'} } if devise_mapping.rememberable? %>

  <%= f.submit t('general.action.sign_in'), class: 'btn btn-primary block full-width m-b-md m-t' %>
<% end %>

<%= render 'devise/shared/links' %>
