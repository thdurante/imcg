<%= render 'devise/shared/title' %>
<p class="m-b-md"><%= t('.explanation') %></p>

<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }, defaults: { wrapper_html: { class: 'has-float-label' } }) do |f| %>
  <% if f.object.errors[:confirmation_token].any? %>
    <div style='display: none' data-flash-message='alert'><%= f.full_error :confirmation_token %></div>
  <% end %>

  <%= f.input :email, required: true, autofocus: true %>
  <%= f.submit t('.button'), class: 'btn btn-primary block full-width m-b' %>
<% end %>

<%= render 'devise/shared/links' %>
